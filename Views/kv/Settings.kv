#:import get_color_from_hex kivy.utils.get_color_from_hex

MDFloatLayout:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "Resources/img/settings_background.jpg"
	
	MDIconButton:
		id: back_button
    	icon: "Resources/img/back_icon.png"
    	pos_hint: {"center_x": 0 + self.height/root.height/2, "center_y": 1 - self.height/root.height/2}
	
	ScrollView:
		size_hint: 0.8, 0.7
		pos_hint: {'center_y': 0.5, 'center_x': 0.5}
		
		canvas.before:
			Color:
				rgba: get_color_from_hex("#FFFFFFFF")
			Rectangle:
				pos: self.pos
				size: self.size
		
		MDGridLayout:
			id: settings_list
			cols: 1
			size_hint_y: None
        	height: self.minimum_height
			row_default_height: '50dp'
			spacing: 10