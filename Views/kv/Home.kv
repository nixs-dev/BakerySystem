MDBoxLayout:
	orientation: "vertical"
	
	canvas.before:
		Color:
			rgba: get_color_from_hex('#D3D4D5')
		Rectangle:
			pos: self.pos
			size: self.size
			source: "Resources/img/home_background.jpg"
	
	MDBoxLayout:
		size_hint: 1, 0.1
		spacing: self.width//4
		orientation: "horizontal"
		
		Image:
			size_hint: None, 0.8
			width: root.width/2
			source: "Resources/img/title_header.png"
		
		MDBoxLayout:
			orientation: "horizontal"
			size_hint: 0.35, 1
			
			Button:
				id: notifications_button
				width: self.height
				background_normal: "Resources/img/notifications_icon.png"
			
			Button:
				id: settings_button
				width: self.height
				background_normal: "Resources/img/settings_icon.png"
		
	MDTabs:
		id: tabs
		size_hint: 1.0, 0.9
		do_default_tab: False
		font_name: "Resources/font/main.ttf"
		background_color: 0, 0, 0, 0
		tab_indicator_anim: True
		
		canvas.before:
			Color:
				rgba: get_color_from_hex("#33cccc")
			RoundedRectangle:
				size: self.size
				pos: self.pos
				radius: [15, 15, 15, 15]
			
		Tab:
			id: products_tab
			text: "Produtos"
				    
			ScrollView:
				MDGridLayout:
					id: products_grid
					cols: 2
					spacing: 5, 5
					height: self.minimum_height
					col_default_width: self.width/2
					row_default_height: 350
					size_hint_y: None
			
			MDTextField:
				id: search_bar
				icon_right: "magnify"
				hint_text: "Pesquisar"
				mode: "fill"
				radius: [20, 20, 20, 20]
				pos_hint: {"center_y": 1 - self.height/root.height/2 - 0.05}
					
		Tab:
			id: profile_tab
			text: "Perfil"
			
			ScrollView:
				MDGridLayout:
					id: profile_info_grid
					cols: 1
					spacing: 35
					size_hint_y: None
        			height: self.minimum_height
					row_default_height: '130dp'
                	row_force_default: True
                
					ClickableImage:
						id: profile_photo
						source: "Resources/img/default_user_icon.png"
					
					MDBoxLayout:
						id: user_info
						orientation: "vertical"
						spacing: 30
						
						Label:
							id: profile_user_name
							text: ""
							font_name: "Resources/font/main.ttf"
							
						Label:
							id: profile_user_cpf
							text: ""
							font_name: "Resources/font/main.ttf"
							
						Label:
							id: profile_user_email
							text: ""
							font_name: "Resources/font/main.ttf"
						
						MDBoxLayout:
							orientation: "horizontal"
							
							Label:
								id: profile_user_p_phone
								text: ""
								font_name: "Resources/font/main.ttf"
							
							Label:
								id: profile_user_s_phone
								text: ""
								font_name: "Resources/font/main.ttf"
						
						MDTextField:
							id: profile_user_password
							name: "password"
							size_hint_x: 0.6
							pos_hint: {"center_x": 0.5}
							mode: "rectangle"
							password: True
							multiline: False
							text: ""
						
					MDBoxLayout:
						orientation: "vertical"
						spacing: 10
							
						Button:
							id: show_deliveries_list
							size_hint_y: 0.2
							text: "Pedidos"
							font_name: "Resources/font/main.ttf"
							background_color: 0, 0, 0, 0
							on_release: root.ids.scrollview.opacity = 1 if root.ids.scrollview.opacity == 0 else 0
							
						ScrollView:
							id: scrollview
							opacity: 0
								
							canvas.before:
								Color:
									rgba: 1, 1, 1, 1
								Rectangle:
									pos: self.pos
									size: self.size
										
							MDGridLayout:
								id: profile_deliveries_list
								spacing: 2
								cols: 1
        						height: self.minimum_height
        						col_default_width: self.width
								row_default_height: root.width * (15/100)
								size_hint_y: None
								
					MDBoxLayout:
						orientation: "horizontal"
						
						Button:
							id: save_profile_button
							text: "Salvar"
							background_normal: "Resources/img/normal_button.png"
							background_down: "Resources/img/down_button.png"
							font_name: "Resources/font/main.ttf"
							font_size: self.height/7
							color: 0, 0, 0, 1
							
						Button:
							id: logout_button
							text: "Sair"
							background_normal: "Resources/img/normal_button.png"
							background_down: "Resources/img/down_button.png"
							font_name: "Resources/font/main.ttf"
							font_size: self.height/7
							color: 0, 0, 0, 1