#:import get_color_from_hex kivy.utils.get_color_from_hex

MDFloatLayout:
	
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "Resources/img/authenticate_background.jpg"
			
	Image:
		size_hint: .5, .5
		pos_hint: {"center_x": .5, "center_y": .75}
		source: 'Resources/img/login_symbol.png'
		
	MDGridLayout:
		cols: 1
		spacing: 5
		size_hint: .7, .37
		pos_hint: {"center_x": .5, "center_y": .3}
		
		MDTextField:
			id: cpf
			mode: "rectangle"
    		hint_text: "CPF"
			multiline: False
			
		MDTextField:
			id: password
			mode: "rectangle"
    		hint_text: "Senha"
			multiline: False
			password: True

		MDLabel:
			id: response
			text: ""
			font_name: "Resources/font/main.ttf"
			size_hint_x: 0.3
			valign: 'middle'
			color: get_color_from_hex('#FF0000')
			
		MDFlatButton:
			id: ok_button
			size_hint: 1., 1.
			text: "Ok"
			font_name: "Resources/font/main.ttf"
			md_bg_color: get_color_from_hex("#9966FF")
			
		MDLabel:
			id: signup_link
			markup: True
			text: "[ref=needsignup]NÃ£o tenho uma conta[/ref]"
			size_hint_x: .3                
			text_size: self.size
			font_name: "Resources/font/main.ttf"
			halign: 'right'
			valign: "middle"
			color: get_color_from_hex('#0000FF')