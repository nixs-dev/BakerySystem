#:import get_color_from_hex kivy.utils.get_color_from_hex
#:include Views/kv/CustomWidgets/ClickableImage.kv

MDFloatLayout:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: "Resources/img/authenticate_background.jpg"
		
	MDIconButton:
		id: back_button
    	icon: "Resources/img/back_icon.png"
    	pos_hint: {"center_x": 0 + self.height/root.height/2, "center_y": 1 - self.height/root.height/2}
	
	MDBoxLayout:
		id: form
		orientation: "vertical"
		size_hint: 0.7, 0.9
		pos_hint: {"center_x": .5, "center_y": 0.5}

		ClickableImage:
			id: profile_photo
			source: "Resources/img/default_user_icon.png"
			
		MDBoxLayout:
			id: personal_info
			orientation: "horizontal"
			
			canvas.before:
				Color:
					rgba: 0, 0, 0, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height
			
			MDTextField:
				id: cpf
				name: "cpf"
				hint_text: "CPF"
				input_filter: "int"
				multiline: False
				
			MDTextField:
				id: birthdate
				name: "birthdate"
				hint_text: "Nascimento"
				input_filter: "int"
				multiline: False
				
		MDBoxLayout:
			orientation: "vertical"
			
			canvas.after:
				Color:
					rgba: 0, 0, 0, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height
			
			MDTextField:
				id: name
				name: "nome"
				hint_text: "Nome"
				multiline: False
				
			MDTextField:
				id: email
				name: "email"
				hint_text: "Email"
				multiline: False
		
		MDBoxLayout:
			id: phone_numbers
			orientation: "horizontal"
			
			MDTextField:
				id: p_phone
				name: "p_phone"
				hint_text: "Telefone 1"
				input_filter: "int"
				multiline: False
				
			MDTextField:
				id: s_phone
				name: "s_phone"
				hint_text: "Telefone 2"
				input_filter: "int"
				multiline: False
				
		MDBoxLayout:
			id: address
			orientation: "vertical"
			
			MDTextField:
				id: cep
				name: "cep"
				hint_text: "CEP"
				input_filter: "int"
				multiline: False
				
			MDTextField:
				id: city
				name: "city"
				hint_text: "Cidade"
				multiline: False
				
			MDTextField:
				id: district
				name: "district"
				hint_text: "Bairro"
				multiline: False